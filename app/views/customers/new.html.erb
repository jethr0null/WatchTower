<<% provide(:title, 'Add Customer') %>
<h1>Add Customer</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@customer) do |f| %>
      <%#= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit "Add Customer", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
