<% provide(:title, 'Add Account') %>
<h1>Add Account</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@account) do |f| %>
    <%= render 'shared/error_messages' %>

      <div class="form-group">

      <%= f.label :account_name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :account_number %>
      <%= f.text_field :account_number, class: 'form-control' %>


      <%= f.hidden_field :customer_id, class: 'form-control', value: params[:customer_id] %>

      <%= f.submit "Add Account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
